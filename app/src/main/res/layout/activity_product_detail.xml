<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="3"
        android:id="@+id/topbar"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/idback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:background="@color/transperent"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/idtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:fontFamily="cursive"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:text="Hot Deals"/>
        <ImageButton
            android:id="@+id/idcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_shopping_cart_24"
            android:background="@color/transperent"
            android:layout_margin="20dp"
            app:tint="@color/yellow" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:paddingBottom="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pimg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/productimg"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ptitle"
                    android:layout_weight="1"
                    android:text="Product Name"
                    android:fontFamily="casual"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/idprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from Rs.850"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdetail"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:fontFamily="casual"
                    android:text="Loream Ipsome Loream Ipsome Loream Ipsome Loream Ipsome Loream Ipsome Loream Ipsome Loream Ipsome Loream IpsomeLoream IpsomeLoream Ipsome Loream Ipsome Loream Ipsome "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/variation_bg"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_margin="10dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Variation"
                       android:textSize="16dp"
                       android:fontFamily="casual"
                       android:layout_weight="1"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="wrap_content"
                       android:text="Required"
                       android:gravity="center"
                       android:padding="10dp"
                       android:fontFamily="casual"
                       android:textColor="@color/white"
                       android:background="@drawable/rounded_bg"
                       android:textSize="12dp"
                       android:layout_weight="1"/>
               </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="2"
                  android:orientation="horizontal"
                  android:layout_margin="10dp">

                  <RadioGroup
                      android:id="@+id/rgbtn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"

                      >
                      <RadioButton
                          android:id="@+id/idrbtn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Small"
                          android:buttonTint="@color/yellow"
                          android:textSize="16dp"
                          />
                  </RadioGroup>
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center_vertical"
                      android:gravity="end"
                      android:orientation="horizontal">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Rs."
                      android:textSize="16dp"

                      android:layout_gravity="center_horizontal"
                      />
                  <TextView
                      android:id="@+id/idvprice"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16dp"
                      android:text="450"
                      android:layout_gravity="center_horizontal"
                      />
              </LinearLayout>
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:weightSum="2"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Extra"
                     android:fontFamily="casual"
                     android:textSize="18dp"
                     android:layout_weight="1"
                     android:textStyle="bold"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Optional"
                     android:gravity="end"
                     android:padding="10dp"
                     android:fontFamily="casual"
                     android:textColor="@color/yellow"
                     android:textSize="12dp"
                     android:textStyle="bold"
                     android:layout_weight="1"/>
             </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                   <CheckBox
                       android:id="@+id/extraCB"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Extra Toping"
                       android:layout_weight="1"
                       />
                    <TextView
                        android:id="@+id/extraPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.100"
                        android:gravity="end"
                        android:padding="10dp"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_alignParentBottom="true">
     <androidx.appcompat.widget.AppCompatButton
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:textAllCaps="false"
         android:textColor="@color/white"
         android:text="Add To Cart"
         android:background="@drawable/rounded_bg"
         android:id="@+id/btnaddCart"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/yellow"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textSize="16dp"
            android:id="@+id/total"/>
    </LinearLayout>
</RelativeLayout>